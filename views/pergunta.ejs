<%-include ('./partials/header.ejs')%>
<body>
    <%-include ('./partials/navbar.ejs')%>
    <div class="container">
        <hr>
        <h1><%= perguntas.titulo %></h1>
        <p><%= perguntas.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <label>Resposta:</label>
            <textarea placeholder="Escreva sua resposta" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= perguntas.id %>">
            <button type="submit" class="btn btn-dark">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div classe="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>      
        <% }) %>
    </div>
</body>
<%-include ('./partials/footer.ejs')%>